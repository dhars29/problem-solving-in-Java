import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a= sc.nextInt();
        float h= sc.nextFloat();
        String n =sc.next();
        System.out.printf("%s is %d years old and %.2f meters tall.\n",n,a,h);
    }
}
